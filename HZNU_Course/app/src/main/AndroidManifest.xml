<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET" />


<!--允许http-->
    <application

        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.HZNU_Course"
        tools:targetApi="31">

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".AddCourseActivity" />
        <activity android:name=".SeeCourseActivity"
            android:label="查看课程"
            android:theme="@style/Theme.AppCompat.Light.Dialog" />
        <!-- Add other activities here -->

        <activity android:name=".NewPageActivity">
            <!-- 如果需要的话，可以添加 intent-filter -->
        </activity>
    </application>

</manifest>
